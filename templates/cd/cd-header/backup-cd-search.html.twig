{% if inline_search %}

  {{ attach_library('common_design/search--inline') }}

  <div class="cd-search--inline">
    <button type="button" id="cd-search-btn" class="cd-search_btn" data-toggle="dropdown" aria-expanded="false" aria-label="Search">
      <svg class="icon icon--search">
        <use xlink:href="#search"></use>
      </svg>
      <span class="cd-search_btn-text">{% trans %}Search{% endtrans %}</span>
    </button>

    {{ page.header_search }}

  </div>

{% else %}

  {{ attach_library('common_design/search') }}

  <div class="cd-search">
    <button type="button" class="cd-search_btn" data-toggle="dropdown" id="cd-search-btn">
      <svg class="icon icon--search">
        <use xlink:href="#search"></use>
      </svg>
      <span class="cd-search_btn-text">{% trans %}Search{% endtrans %}</span>
    </button>

    {{ page.header_search }}

  </div>

{% endif %}
