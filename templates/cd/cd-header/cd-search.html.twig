{% if inline_search %}

  {{ attach_library('common_design/cd-search--inline') }}

  <div class="cd-search--inline">
    <button type="button" id="cd-search-btn" class="cd-search__btn" data-toggle="cd-dropdown" aria-expanded="false" aria-label="Search">
      <svg class="cd-icon cd-icon--search">
        <use xlink:href="#cd-icon--search"></use>
      </svg>
      <span class="cd-search__btn-text">{% trans %}Search{% endtrans %}</span>
    </button>

    {{ page.header_search }}

  </div>

{% else %}

  {{ attach_library('common_design/cd-search') }}

  <div class="cd-search">
    <button type="button" id="cd-search-btn" class="cd-search__btn" data-toggle="cd-dropdown" aria-expanded="false" aria-label="Search">
      <svg class="cd-icon cd-icon--search">
        <use xlink:href="#cd-icon--search"></use>
      </svg>
      <span class="cd-search__btn-text">{% trans %}Search{% endtrans %}</span>
    </button>

    {{ page.header_search }}

  </div>

{% endif %}
