{{ attach_library('common_design/cd-search') }}

{% if inline_search %}

  <div class="cd-search--inline">
    <button type="button" id="cd-search-btn" class="cd-search__btn" data-toggle="dropdown" aria-expanded="false" aria-label="Search">
      <svg class="cd-icon cd-icon--search">
        <use xlink:href="#cd-icon--search"></use>
      </svg>
      <span class="cd-search__btn-label">{% trans %}Search{% endtrans %}</span>
    </button>

    {{ page.header_search }}

  </div>

  {% else %}

  <div class="cd-search">

    {# Search toggle button is added with Javascript #}

  {{ page.header_search }}

  </div>

{% endif %}

