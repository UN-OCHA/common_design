{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
  'region',
  'region-' ~ region|clean_class,
  'cd-filters'
]
%}

{{ attach_library('common_design/cd-dropdown') }}

{% if content %}

  <div id="cd-filters-dropdown" role="menu" {{ attributes.setAttribute('aria-labelledby', 'cd-filters-dropdown-toggle').setAttribute('data-cd-toggable', 'Filters').setAttribute('data-cd-component', 'cd-filters').setAttribute('data-cd-icon', 'arrow-down').setAttribute('data-cd-toggable-keep', 'true').addClass(classes) }}>
    {{ content }}
  </div>

{% endif %}
