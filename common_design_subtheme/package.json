{
  "name": "common-design-subtheme",
  "version": "9.4.1",
  "description": "OCHA Common Design sub theme for Drupal 9+",
  "repository": "git@github.com:UN-OCHA/common_design.git",
  "author": "UN OCHA",
  "license": "GPL-2.0",
  "scripts": {
    "css:lint": "stylelint '{css,components,libraries}/**/*.css'",
    "css:lint-fix": "stylelint '{css,components,libraries}/**/*.css' --fix",
    "js:lint": "eslint '{js,components,libraries}/**/*.js' --no-error-on-unmatched-pattern",
    "svg:sprite": "svg-sprite --svg-xmldecl=false --svg-doctype=false --svg-rootattrs=_config/svg-sprite.config.json --log=info --symbol --symbol-prefix='%s' --symbol-example=true --shape-id-generator='cd-icon--' --symbol-dest=img/icons --symbol-sprite=cd-icons-sprite.svg img/icons/*.svg",
    "e2e": "jest _tests/*.test.js",
    "ci": "jest --maxWorkers=2 _tests/*.test.js",
    "test": "jest _tests/*.test.js"
  },
  "engines": {
    "node": "^18.16.1",
    "npm": "^9.7.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@xmldom/xmldom": "^0.8.4",
    "babel-jest": "^29.3.1",
    "core-js": "^3.20.0",
    "css-what": ">=5.0.1",
    "eslint": "^7.23.0",
    "jest": "^29.3.1",
    "jest-puppeteer": "^10.0.1",
    "json-schema": ">=0.4.0",
    "minimist": "^1.2.6",
    "nth-check": ">=2.0.1",
    "puppeteer": "^21",
    "set-value": ">=4.0.1",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-order": "^6.0.3",
    "svg-sprite": "^2.0.2",
    "trim": ">=0.0.3",
    "trim-newlines": "^4.0.2",
    "yargs-parser": "^18.1.3"
  }
}
