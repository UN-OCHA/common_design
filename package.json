{
  "name": "common-design",
  "version": "9.3.0",
  "description": "OCHA Common Design base theme for Drupal 9+",
  "repository": "git@github.com:UN-OCHA/common_design.git",
  "author": "UN OCHA",
  "license": "GPL-2.0",
  "scripts": {
    "css:lint": "stylelint '{css,components,libraries}/**/*.css'",
    "css:lint-fix": "stylelint '{css,components,libraries}/**/*.css' --fix",
    "js:lint": "eslint '{js,components,libraries}/**/*.js'",
    "svg:sprite": "svg-sprite --svg-xmldecl=false --svg-doctype=false --svg-rootattrs=_config/svg-sprite.config.json --log=info --symbol --symbol-prefix='%s' --symbol-example=true --shape-id-generator='cd-icon--' --symbol-dest=img/icons --symbol-sprite=cd-icons-sprite.svg img/icons/*.svg",
    "release": "standard-version"
  },
  "engines": {
    "node": "^18.16.1",
    "npm": "^9.7.2"
  },
  "devDependencies": {
    "@xmldom/xmldom": "^0.8.4",
    "axios": ">=0.21.2",
    "core-js": "^3.20.0",
    "css-what": ">=5.0.1",
    "eslint": "^7.23.0",
    "json-schema": ">=0.4.0",
    "minimist": "^1.2.6",
    "nth-check": ">=2.0.1",
    "set-value": ">=4.0.1",
    "standard-version": "^9.3.2",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-order": "^6.0.3",
    "svg-sprite": "^2.0.2",
    "trim": ">=0.0.3",
    "trim-newlines": "^4.0.2",
    "yargs-parser": "^18.1.3"
  },
  "//": "skip creation of git tags, which we manage on GitHub.",
  "standard-version": {
    "skip": {
      "tag": true
    }
  }
}
