{
  "name": "common-design",
  "type": "module",
  "version": "3.0.5",
  "description": "OCHA Common Design base theme for Drupal 8",
  "repository": "git@github.com:UN-OCHA/common_design.git",
  "author": "UN OCHA",
  "license": "GPL-2.0",
  "main": "index.js",
  "scripts": {
    "sass:compile": "sass sass/styles.scss css/styles.css --style=expanded --embed-sources",
    "sass:watch": "npm run sass:lint && npm run sass:compile -- --watch",
    "sass:lint": "sass-lint -c .sass-lint.yml 'sass/**/*.scss' -v -q",
    "sass:build": "npm run sass:lint && npm run sass:compile",
    "js:lint": "eslint js/*.js",
    "svg:compile": "svg-sprite --svg-xmldecl=false --svg-doctype=false --svg-rootattrs=_config/svg-sprite.config.json --log=info --symbol --symbol-prefix='%s' --symbol-example=true --shape-id-generator='cd-icon--' --symbol-dest=img/icons --symbol-sprite=cd-icons-sprite.svg img/icons/*.svg"
  },
  "engines": {
    "node": "^12.21.0",
    "npm": "^7.6.1"
  },
  "dependencies": {
    "eslint": "^7.23.0",
    "sass": "^1.32.8",
    "sass-lint": "^1.13.1",
    "svg-sprite": "^1.5.0"
  }
}
