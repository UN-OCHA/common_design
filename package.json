{
  "name": "common-design",
  "type": "module",
  "version": "3.0.5",
  "description": "OCHA Common Design base theme for Drupal 8",
  "repository": "git@github.com:UN-OCHA/common_design.git",
  "author": "UN OCHA",
  "license": "GPL-2.0",
  "main": "index.js",
  "scripts": {
    "sass:compile": "sass sass/styles.scss css/styles.css --style=expanded --embed-sources",
    "sass:watch": "npm run sass:lint && npm run sass:compile -- --watch",
    "sass:lint": "sass-lint -c .sass-lint.yml 'sass/**/*.scss' -v -q",
    "sass:build": "npm run sass:lint && npm run sass:compile",
    "svg:compile": "svg-sprite -c svg-sprite.config.json --dest img/icons img/icons/cd-icons-sprite.svg",
    "start": "node index.js"
  },
  "engines": {
    "node": "^12.21.0",
    "npm": "^7.6.1"
  },
  "dependencies": {
    "sass": "^1.32.8",
    "sass-lint": "^1.13.1",
    "svg-sprite": "^1.5.0"
  }
}
